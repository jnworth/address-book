<div class = "btn-group", style = "padding:10px;">
    <%=button_to "Edit", root_url + 'people/' + params[:id] + '/edit', class: "btn btn-dark bi-text-right", style: "margin-right:10px;" %>
    <%= button_to 'Delete', @person, method: :delete, class: "btn btn-dark bi-x" %>
</div>
<h1><%=@person.salutation%> <%= @person.fname %> <%= @person.mname %> <%= @person.lname %></h1>
<h4>DOB: <%= @person.dob %></h4>
<h4>SSN: <%= @person.ssn %></h4>
<h4>Comments: <%= @person.comment %></h4>

<h2>Address</h2>
<%@person.addresses.each do |address|%>
<h4>Street: <%= address.street %></h4>
<h4>Town: <%= address.town %></h4>
<h4>Zip Code: <%= address.zip_code %></h4>
<h4>State: <%= address.state %></h4>
<h4>Country: <%= address.country %></h4>
<%end%>

<h2>Email</h2>
<%@person.emails.each do |email|%>
<h4>Email: <%= email.email_address%></h4>
<h4>Comments: <%= email.comment %></h4>
<%end%>

<%@person.phones.each do |phone|%>
<h2>Phone</h2>
<h4>Phone: <%= phone.phone_number %></h4>
<h4>Comments: <%= phone.comment %></h4>
<%end%>
